= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .form-actions
    .center
      = btn_link_to "Continue with My MLH &raquo;".html_safe, user_mlh_omniauth_authorize_path
      %p
        %em or create an account:
  .form-inputs
    = f.input :email, required: true, autofocus: true
    = f.input :password, required: true
    = f.input :password_confirmation, required: true, label:"Confirm"
  .form-actions.right
    = f.button :submit, "Register"
    %p.session-link
      Have an account?
      = link_to "Sign in!".html_safe, new_user_session_path
