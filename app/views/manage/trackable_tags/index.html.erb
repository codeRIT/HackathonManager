<%= render "layouts/manage/page_title", title: t(:title, scope: 'pages.manage.trackable-tags') do %>
  <%= link_to "New Tag", new_manage_trackable_tag_path, class: "btn btn-sm btn-outline-secondary" %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Allow duplicates</th>
      <th>Events</th>
      <th>Last event</th>
      <th>Add event</th>
    </tr>
  </thead>
  <tbody>
    <% @trackable_tags.each do |trackable_tag| %>
      <tr>
        <td>
          <%= link_to trackable_tag.name, manage_trackable_tag_path(trackable_tag) %>
        </td>
        <td>
          <% if trackable_tag.allow_duplicate_band_events %>
            <span>Allow</span>
          <% else %>
            <span class="text-danger">Block</span>
          <% end %>
        </td>
        <td>
          <%= pluralize(trackable_tag.trackable_events.count, "event") %>
        </td>
        <td>
          <%= trackable_tag.trackable_events.any? ? display_datetime(trackable_tag.sorted_events.first.created_at) : '' %>
        </td>
        <td>
          <%= link_to 'Add event', new_manage_trackable_event_path(trackable_tag_id: trackable_tag.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
