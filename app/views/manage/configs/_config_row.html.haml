- secret ||= false  # default value if prop not set
- default ||= nil  # default value if prop not set
- value = ENV[key] || default

%p
  %b= name
  &nbsp;
  %small
    %code= key
  %br
  - if value.present?
    - if secret
      %span.badge.badge-success Set
    - else
      %pre= value
  - else
    %span.badge.badge-danger Not set
